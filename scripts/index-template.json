{
  "index_patterns": [
    "finops-*"
  ],
  "data_stream": {},
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "refresh_interval": "5s"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "service": {
          "type": "keyword"
        },
        "cluster": {
          "type": "keyword"
        },
        "team": {
          "type": "keyword"
        },
        "env": {
          "type": "keyword"
        },
        "cpu_pct": {
          "type": "half_float"
        },
        "mem_pct": {
          "type": "half_float"
        },
        "disk_gb": {
          "type": "half_float"
        },
        "req_per_min": {
          "type": "integer"
        },
        "error_rate_pct": {
          "type": "half_float"
        },
        "sla_target_pct": {
          "type": "half_float"
        },
        "sla_observed_pct": {
          "type": "half_float"
        },
        "cost_hour": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "cost_day": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "instance_type": {
          "type": "keyword"
        },
        "efficiency_score": {
          "type": "half_float"
        },
        "notes": {
          "type": "text"
        }
      }
    }
  },
  "_meta": {
    "description": "Template FinOps + Observabilidade (simulado)"
  }
}